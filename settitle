#!/bin/sh
##
## Sets the title of xterm-compatible terminals.
## By Stanislaw Klekot (dozzie/AT/irc.pl)
## Released to Public Domain
##
## This is part of Tiny Applications Collection
##   -> http://tinyapps.sourceforge.net/
##

if [ $# = 0 ]; then
  echo -ne "\e]2;rxvt\007"
else
  echo -ne "\e]2;$*\007"
fi
